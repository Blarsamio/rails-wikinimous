<div class="container">
  <div class="title">
    <h2><%= @article.title %></h2>
    <div class="icons">
      <%= link_to "✏️", edit_article_path  %>
      <%= link_to "🗑️", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  </div>
  <div class="content">
    <p><%= @article.content %></p>
  </div>
  <div class="actions">
    <%= link_to 'Edit', edit_article_path(@article) %> |
    <%= link_to 'Back', articles_path %>
  </div>
</div>
