<div class="container">
  <%= form_for @article do |f|  %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, size: "70x2" %>
    </div>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content, size: "70x5" %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
